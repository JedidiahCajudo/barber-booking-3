<h1>All Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Start Time</th>
      <th>Barber</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.member_id %></td>
        <td><%= appointment.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= appointment.barber %></td>
        <td><%= appointment.notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Appointment', new_appointment_path %>
